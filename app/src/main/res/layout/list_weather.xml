<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cloud"
        android:layout_below="@+id/linearLayout2"
        android:layout_toEndOf="@+id/linearLayout2"
        android:layout_marginStart="11dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

    </LinearLayout>

    <TextView
        android:id="@+id/list_item_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_item_degree2"
        android:layout_alignBottom="@+id/list_item_degree2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:text="17°"
        android:textColor="#aaa"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/list_item_degree2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13°"
        android:textSize="28sp"
        android:layout_marginEnd="17dp"
        android:layout_alignBaseline="@+id/list_item_weather_desc"
        android:layout_alignBottom="@+id/list_item_weather_desc"
        android:layout_toStartOf="@+id/list_item_degree" />

    <TextView
        android:id="@+id/list_item_weather_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moderate Rain"
        android:layout_below="@+id/list_item_weather_day"
        android:layout_alignStart="@+id/list_item_weather_day" />

    <TextView
        android:id="@+id/list_item_weather_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomorrow"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_toEndOf="@+id/list_item_weather_icon"
        android:layout_marginStart="11dp" />


</RelativeLayout>
